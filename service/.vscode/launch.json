    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Die Roller with manual OTEL",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js",
            "envFile": "${workspaceFolder}/die-roller.env",
            "env": {
                "NODE_OPTIONS": "--import ./manual-otel.js"
            }
        }
    ]
}